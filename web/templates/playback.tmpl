{{template "head.tmpl" .}}
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Playback Event</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/pages/aiEvent">Event List</a></li>
          <li class="breadcrumb-item active">Playback</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <img src="{{ .event.Thumbnail }}" class="img-fluid" alt="Event Thumbnail">
        <p><strong>Result</strong>: {{ .event.Result }}</p>
        <p><strong>Object</strong>: {{ .event.Object }}</p>
        <p><strong>Date</strong>: {{ .event.Date }}</p>
        <p><strong>Camera</strong>: {{ .event.Camera }}</p>
        <p><strong>Location</strong>: {{ .event.Location }}</p>
      </div>
      <div class="col-md-8">
        <img src="{{ .event.FullImage }}" class="img-fluid" alt="Full Image">
      </div>
    </div>
  </div>
</div>

{{template "foot.tmpl" .}}
